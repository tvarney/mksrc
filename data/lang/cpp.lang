
language "C++" {
    description = "C++ source file";
    
    suffix[0] = ["C", "cpp", "cxx", "Cxx", "cc", "c++"];
    suffix[1] = ["H", "hpp", "hxx", "Hxx", "hh", "h++"];
    
    comment-line = "//";
    comment-start = "/*";
    comment-fill = " *";
    comment-end = " */";
    
    doc-line = "///";
    doc-start = "/**";
    doc-fill = " *";
    doc-end = " */";
}
